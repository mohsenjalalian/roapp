<!DOCTYPE html>
<html>
<head>
    <meta charset="UTF-8" />
    <title>{% block title %}Welcome!{% endblock %}</title>
    {% block stylesheets %}

        {% stylesheets
        'assets/vendor/bootstrap/dist/css/bootstrap.min.css'
        'bundles/app/pixeladmin/assets/stylesheets/pixel-admin.min.css'
        'bundles/app/pixeladmin/assets/stylesheets/widgets.min.css'
        'bundles/app/pixeladmin/assets/stylesheets/rtl.min.css'
        'bundles/app/pixeladmin/assets/stylesheets/themes.min.css'
        'assets/vendor/font-awesome/css/font-awesome.min.css'
        'bundles/app/stylesheets/customer/layout.css'
        %}
        <link rel="stylesheet" href="{{ asset_url }}" />
        {% endstylesheets %}
    {% endblock %}
    <meta http-equiv="X-UA-Compatible" content="IE=edge">
    <meta name="viewport" content="width=device-width, initial-scale=1">
    <meta name="description" content="">
    <meta name="author" content="">

    <!-- HTML5 Shim and Respond.js IE8 support of HTML5 elements and media queries -->
