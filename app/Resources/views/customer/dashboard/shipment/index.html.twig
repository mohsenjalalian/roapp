{% extends 'base.html.twig' %}

{% block body %}
    <h1>Shipment list</h1>

    <table>
        <thead>
            <tr>
                <th>Id</th>
                <th>Description</th>
                <th>Value</th>
                <th>Status</th>
                <th>Pickuptime</th>
                <th>Createdat</th>
                <th>Price</th>
                <th>Type</th>
                <th>Actions</th>
            </tr>
        </thead>
        <tbody>
        {% for shipment in shipments %}
            <tr>
                <td><a href="{{ path('customer_dashboard_shipment_show', { 'id': shipment.id }) }}">{{ shipment.id }}</a></td>
                <td>{{ shipment.description }}</td>
                <td>{{ shipment.value }}</td>
                <td>{{ shipment.status }}</td>
                <td>{% if shipment.pickUpTime %}{{ shipment.pickUpTime|date('Y-m-d H:i:s') }}{% endif %}</td>
                <td>{% if shipment.createdAt %}{{ shipment.createdAt|date('Y-m-d H:i:s') }}{% endif %}</td>
                <td>{{ shipment.price }}</td>
                <td>{{ shipment.type }}</td>
                <td>
                    <ul>
                        <li>
                            <a href="{{ path('customer_dashboard_shipment_show', { 'id': shipment.id }) }}">show</a>
                        </li>
                        <li>
                            <a href="{{ path('customer_dashboard_shipment_edit', { 'id': shipment.id }) }}">edit</a>
                        </li>
                    </ul>
                </td>
            </tr>
        {% endfor %}
        </tbody>
    </table>

    <ul>
        <li>
            <a href="{{ path('customer_dashboard_shipment_new') }}">Create a new entry</a>
        </li>
    </ul>
{% endblock %}
