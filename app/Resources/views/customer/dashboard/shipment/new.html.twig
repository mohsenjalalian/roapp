        <script>
            $(document).ready(function() {
                $(".js-datepicker").pDatepicker(
                        {
                            timePicker: {
                                enabled: true,
                                showSeconds: true,
                                showMeridian: true,
                                scrollEnabled: true,
                                showOn: 'button',
                                buttonImageOnly: true,
