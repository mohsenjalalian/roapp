{% extends ':customer/dashboard:layout.html.twig' %}

{% block stylesheets %}
    {{ parent()  }}
    {% stylesheets 'bundles/app/stylesheets/customer/dashboard/address/style.css' %}
    <link rel="stylesheet" href="{{ asset_url }}" />
    {% endstylesheets %}
{% endblock %}

{% block javascripts %}
    {{ parent()  }}
    {% javascripts
    'bundles/app/javascript/customer/dashboard/address/script.js'
    %}
    <script src="{{ asset_url }}"></script>
    <script src="{{ getGoogleMapShowLink() }}"></script>
    {% endjavascripts %}
{% endblock %}

{% block page_title %}
    آدرس
{% endblock %}
{% block breadcrumbs %}
    <li><a href="{{ path('app_customer_dashboard_address_index') }}">آدرس ها</a></li>
    <li class="active">نمایش</li>
{% endblock %}
{% block main %}
    <div class="panel">
        <div class="panel-heading">
            <span class="panel-title">آدرس</span>
        </div>
        <div id="map"></div>
        <div class="panel-body">
            <table class="ui celled table">
                <tbody class="headColor">
                    <tr>
                        <th>وضعیت نمایش</th>
                        <td>{% if address.isPublic %}عمومی{% else %}محرمانه{% endif %}</td>
                    </tr>
                    <tr>
                        <th>آدرس</th>
                        <td id="address" data-lat="{{ address.latitude }}" data-lng="{{ address.longitude }}">{{ address.description }}</td>
                    </tr>
                </tbody>
            </table>
        </div>
        <div>
            <a style="margin-right: 10px;margin-bottom: 10px" class="btn btn-sm btn-labeled btn-primary" href="{{ path('app_customer_dashboard_address_index') }}">فهرست آدرس ها</a>
        </div>
    </div>
{% endblock %}
