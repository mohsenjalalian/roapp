{% extends 'base.html.twig' %}

{% block body %}
    <h1>Address</h1>

    <table>
        <tbody>
            <tr>
                <th>Id</th>
                <td>{{ address.id }}</td>
            </tr>
            <tr>
                <th>Ispublic</th>
                <td>{% if address.isPublic %}Yes{% else %}No{% endif %}</td>
            </tr>
            <tr>
                <th>Description</th>
                <td>{{ address.description }}</td>
            </tr>
            <tr>
                <th>Latitude</th>
                <td>{{ address.latitude }}</td>
            </tr>
            <tr>
                <th>Longitude</th>
                <td>{{ address.longitude }}</td>
            </tr>
        </tbody>
    </table>

    <ul>
        <li>
            <a href="{{ path('customer_dashboard_address_index') }}">Back to the list</a>
        </li>
        <li>
            <a href="{{ path('customer_dashboard_address_edit', { 'id': address.id }) }}">Edit</a>
        </li>
        <li>
            {{ form_start(delete_form) }}
                <input type="submit" value="Delete">
            {{ form_end(delete_form) }}
        </li>
    </ul>
{% endblock %}
