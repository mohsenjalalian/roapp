         {##}

         {#<button type="submit">login</button>#}
     {#</form>#}

     <div class="ui middle aligned center aligned grid">
         <div class="column">
             <h2 class="ui teal image header">
                 <div class="content">
                     ورود به سامانه
                 </div>
             </h2>
             <div class="ui error">
                 {% if error %}
                    <div>{{ error.messageKey|trans(error.messageData, 'security') }}</div>
                 {% endif %}
             </div>
             <form action="{{ path('app_customer_dashboard_security_login') }}" method="post" class="ui large form">
                 <div class="ui stacked segment">
                     <div class="field">
                         <div class="ui left icon input">
                             <i class="user icon"></i>
                             <input type="text" id="username" name="_username" value="{{ last_username }}" placeholder="پست الکترونیکی" />
                         </div>
                     </div>
                     <input type="hidden" name="_target_path" value="{{ path('app_customer_dashboard_default_index') }}" />
                     <div class="field">
                         <div class="ui left icon input">
                             <i class="lock icon"></i>
                             <input type="password" id="password" name="_password" placeholder="رمز عبور"/>
                         </div>
                     </div>
                     <button type="submit" class="ui fluid large teal submit button">ورورد</button>
                 </div>

                 <div class="ui error message">asdasdad</div>

             </form>

             <div class="ui message">
                 عضو نیستید؟ <a href="#">ثبت نام کنید</a>
             </div>
         </div>
     </div>

 {% endblock %}

{% block stylesheets %}
    {{ parent() }}
    <style type="text/css">
        body {
            background-color: #DADADA;
        }
        body > .grid {
            height: 100%;
        }
        .image {
            margin-top: -100px;
        }
        .column {
            max-width: 450px;
        }
    </style>
{% endblock %}