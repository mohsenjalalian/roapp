{% extends ':operator/dashboard:layout.html.twig' %}
{% block title %}
    ویرایش مسئول واحد تجاری
{% endblock %}
{% block page_title %}
    ویرایش مسئول واحد تجاری
{% endblock %}
{% block breadcrumbs %}
    <li><a href="{{ path('app_operator_dashboard_customer_index') }}">مسئولین واحد های تجاری</a></li>
    <li class="active">ویرایش مسئول واحد تجاری</li>
{% endblock %}
{% block main %}
    <div class="alert alert-danger" id="alert_msg_customer_form_operator_dashboard" style="display: none">

    </div>
    {{ form_start(edit_form) }}
    {{ form_errors(edit_form) }}
    <div class="panel-heading">
        <span class="panel-title">ویرایش مسئول واحد تجاری</span>
    </div>
    <div class="panel-body">
        {% form_theme edit_form 'bootstrap_3_layout.html.twig' %}
        <div class="ui form">
            <div class="form-group">
                {{ form_label(edit_form.fullName, null, {"label_attr":{"class": "col-sm-2 control-label"}}) }}
                <div class="col-sm-10">
                    {{ form_widget(edit_form.fullName, {"attr": {"placeholder": edit_form.fullName.vars.label}}) }}
                    {{ form_errors(edit_form) }}
                </div>
            </div>
            <div class="form-group">
                {{ form_label(edit_form.email, null, {"label_attr":{"class": "col-sm-2 control-label"}}) }}
                <div class="col-sm-10">
                    {{ form_widget(edit_form.email, {"attr": {"placeholder": edit_form.email.vars.label}}) }}
                    {{ form_errors(edit_form.email) }}
                </div>
            </div>
            <div class="form-group">
                {{ form_label(edit_form.phone, null, {"label_attr":{"class": "col-sm-2 control-label"}}) }}
                <div class="col-sm-10">
                    {{ form_widget(edit_form.phone, {"attr": {"placeholder": edit_form.phone.vars.label}}) }}
                    {{ form_errors(edit_form.phone) }}
                </div>
            </div>
            <div class="form-group">
                {{ form_label(edit_form.currentPassword, null, {"label_attr":{"class": "col-sm-2 control-label"}}) }}
                <div class="col-sm-10">
                    {{ form_widget(edit_form.currentPassword, {"attr": {"placeholder": edit_form.currentPassword.vars.label}}) }}
                </div>
            </div>
            <div class="form-group">
                {{ form_label(edit_form.newPassword.first, null, {"label_attr":{"class": "col-sm-2 control-label"}}) }}
                <div class="col-sm-10">
                    {{ form_widget(edit_form.newPassword.first, {"attr": {"placeholder": edit_form.newPassword.first.vars.label}}) }}
                </div>
            </div>
            <div class="form-group">
                {{ form_label(edit_form.newPassword.second, null, {"label_attr":{"class": "col-sm-2 control-label"}}) }}
                <div class="col-sm-10">
                    {{ form_widget(edit_form.newPassword.second, {"attr": {"placeholder": edit_form.newPassword.second.vars.label}}) }}
                </div>
            </div>
            <div class="form-group">
                {{ form_label(edit_form.businessUnit, null, {"label_attr":{"class": "col-sm-2 control-label"}}) }}
                <div class="col-sm-10">
                    {{ form_widget(edit_form.businessUnit, {"attr": {"placeholder": edit_form.businessUnit.vars.label}}) }}
                    {{ form_errors(edit_form.businessUnit) }}
                </div>
            </div>
            <div class="form-group">
                <div class="col-sm-offset-2 col-sm-10">
                    {{ form_widget(edit_form.isActive, {"attr": {"placeholder": edit_form.isActive.vars.label}}) }}
                </div>
            </div>
            <div class="form-group" style="margin-bottom: 10px;">
                <div class="col-sm-offset-2 col-sm-10">
                    <input id="driver_edit_button" class="btn btn-flat btn-sm btn-labeled btn-info" type="submit" value="ویرایش" />
                </div>
            </div>
            {{ form_end(edit_form) }}
            <div class="form-group" style="margin-bottom: 10px;">
                <div class="col-sm-offset-2 col-sm-10">
                    {{ form_start(delete_form) }}
                    <input class="btn btn-flat btn-sm btn-labeled btn-danger" type="submit" value="حذف">
                    {{ form_end(delete_form) }}
                </div>
            </div>
        </div>
        {#<div style="margin-top: 10px">#}
            {#<a style="color: black" href="{{ path('app_operator_dashboard_customer_index') }}"><button>لیست کل مشتریان</button></a>#}
            {#{{ form_start(delete_form) }}#}
            {#<input type="submit" value="حذف">#}
            {#{{ form_end(delete_form) }}#}
        {#</div>#}
    </div>
{% endblock %}
{% block javascripts %}
    {{ parent()  }}

    {% javascripts
    'bundles/app/javascript/operator/dashboard/customer/customer_check_password.js'
    %}
    <script type="text/javascript" src="{{ asset_url }}" ></script>
    {% endjavascripts %}
{% endblock %}
