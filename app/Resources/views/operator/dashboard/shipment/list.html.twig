{% extends ':operator/dashboard:layout.html.twig' %}

{% block main %}
    <h2 class="ui header" style="display: inline">لیست سفارشات آماده برای انتصاب</h2>

    <table class="ui celled table">
        <thead>
        <tr>
            <td>id</td>
            <td>نام سفارش دهنده</td>
            <th>{{ knp_pagination_sortable(pagination, 'زمان انجام کار', 's.pickUpTime') }}</th>
            <td>نوع</td>
            <td>وضعیت</td>
            <td>عرض جغرافیایی</td>
            <td>طول جغرافیایی</td>
            <td>عملیات</td>
        </tr>
        </thead>
        <tbody>
        {% for shipment in pagination %}
            {% if shipment.status != 1 and shipment.status != 2 %}
                <tr class="shipment_assign_list{{ shipment.id }}">
                    <td>{{ shipment.id }}</td>
                    <td>{{ shipment.ownerAddress.creator.username }}</td>
                    <td>{{ shipment.pickUpTime|date('Y-m-d H:i:s') }}</td>
                    <td>{{ shipment.type }}</td>
                    <td>انتصاب نشده</td>
                    <td>{{ shipment.ownerAddress.latitude }}</td>
                    <td>{{ shipment.ownerAddress.longitude }}</td>
                    <td><a href="{{ path("app_operator_dashboard_driver_list") }}/{{ shipment.id }}"><button>انتصاب</button></a></td>
                    <td><button value="{{ shipment.id }}" class="reject_shipment_button">رد</button></td>
                </tr>
            {% endif %}
        {% endfor %}
        </tbody>
    </table>
    <div class="ui modal small">
        <input class="type" type="hidden">
        {#<div class="header">Header</div>#}
        <div class="content">
            <h3>مطمئن هستید ؟</h3>
        </div>
        <div  class="actions">
            <div id="accept_reject_button" style="float: right;margin-bottom: 20px" class="ui approve button" data-value="">بلی</div>
            <div style="float: right" class="ui cancel button">خیر</div>
        </div>
    </div>
        <div class="ui one column stackable center aligned page grid navigation">
            <div class="pagination menu column twelve wide ui" style="font-size: 18px">
                {{ knp_pagination_render(pagination) }}
            </div>
        </div>
    {% block javascripts %}
        {% javascripts
        'assets/vendor/jquery/dist/jquery.js'
        '@semantic_base_js'
        'bundles/app/javascript/operator/dashboard/shipment/reject_shipment.js'
        %}
        <script type="text/javascript" src="{{ asset_url }}" ></script>
        {% endjavascripts %}
    {% endblock %}
{% endblock %}

