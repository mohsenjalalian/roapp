{% extends ':operator/dashboard:layout.html.twig' %}

{% block main %}
    <h2 class="ui header" style="display: inline">لیست سفارشات آماده برای انتصاب</h2>

    <table class="ui celled table">
        <thead>
        <tr>
            <td>id</td>
            <td>نام سفارش دهنده</td>
            <th>{{ knp_pagination_sortable(pagination, 'زمان انجام کار', 'a.pickUpTime') }}</th>
            <td>نوع</td>
            <td>وضعیت</td>
            <td>عرض جغرافیایی</td>
            <td>طول جغرافیایی</td>
            <td>عملیات</td>
        </tr>
        </thead>
        <tbody>
        {% for shipment in pagination %}
            {% if shipment.status != 1 and shipment.status != 2 %}
                <tr>
                    <td>{{ shipment.id }}</td>
                    <td>{{ shipment.ownerAddress.creator.username }}</td>
                    <td>{{ shipment.pickUpTime|date('Y-m-d H:i:s') }}</td>
                    <td>{{ shipment.type }}</td>
                    <td>انتصاب نشده</td>
                    <td>{{ shipment.ownerAddress.latitude }}</td>
                    <td>{{ shipment.ownerAddress.longitude }}</td>
                    <td><a href="{{ path("app_operator_dashboard_driver_list") }}/{{ shipment.id }}"><button>انتصاب به راننده</button></a></td>
                </tr>
            {% endif %}
        {% endfor %}
        </tbody>
    </table>
    {% if pagination.getTotalItemCount > 10 %}
        <div class="ui one column stackable center aligned page grid navigation">
            <div class="pagination menu column twelve wide ui" style="font-size: 18px">
                {{ knp_pagination_render(pagination) }}
            </div>
        </div>

    {% endif  %}
    {% block javascripts %}
        {% javascripts
        'assets/vendor/jquery/dist/jquery.js'
        '@semantic_base_js'
        'bundles/app/javascripts/operator/dashboard/assignOrder/getOrderInfo.js'
        %}
        <script type="text/javascript" src="{{ asset_url }}" ></script>
        {% endjavascripts %}
    {% endblock %}
{% endblock %}

