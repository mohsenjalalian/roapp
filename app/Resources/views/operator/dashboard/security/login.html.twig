{% extends ':operator/dashboard:layout.html.twig' %}

 {% block main %}

     {% if error %}
         <div>{{ error.messageKey|trans(error.messageData, 'security') }}</div>
     {% endif %}
     <div class="ui grid">
         <div class="four wide column">
         <form class="ui form" action="{{ path('operator_dashboard_login') }}" method="post">
             <label for="username">نام کاربری :</label>
             <input type="text" id="username" name="_username" value="{{ last_username }}" /><br>
             <label for="password">رمز عبور :</label>
             <input type="password" id="password" name="_password" /> <br>
             <div class="ui inverted divider"></div>
             <label for="remember_me">مرا به خاطر بسپار</label>
             <input type="checkbox" id="remember_me" name="_remember_me" checked /><br>
             {#
                 If you want to control the URL the user
                 is redirected to on success (more details below)
                 <input type="hidden" name="_target_path" value="/account" />
             #}

             <button style="color: black" type="submit">ورود</button>
             </div>
         </form>
         </div>
     </div>

 {% endblock %}