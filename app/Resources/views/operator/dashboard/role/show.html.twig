{% extends ':operator/dashboard:layout.html.twig' %}

{% block page_title %}
نقش {{ role.name }}
{% endblock %}
{% block breadcrumbs %}
    <li>
        <a href="{{ path('operator_dashboard_driver_index') }}">نقش ها</a>
    </li>
{% endblock %}

{% block main %}
    <div class="panel">
        <div class="panel-body">
            <table class="table">
                <tbody>
                <tr>
                    <th>Id</th>
                    <td>{{ role.id }}</td>
                </tr>
                <tr>
                    <th>Name</th>
                    <td>{{ role.name }}</td>
                </tr>
                <tr>
                    <th>Label</th>
                    <td>{{ role.label }}</td>
                </tr>
                <tr>
                    <th>Scope</th>
                    <td>{{ role.scope }}</td>
                </tr>
                </tbody>
            </table>

            <ul>
                <li>
                    <a href="{{ path('operator_dashboard_driver_index') }}">Back to the list</a>
                </li>
                <li>
                    <a href="{{ path('operator_dashboard_driver_edit', { 'id': role.id }) }}">Edit</a>
                </li>
                <li>
                    {{ form_start(delete_form) }}
                    <input type="submit" value="Delete">
                    {{ form_end(delete_form) }}
                </li>
            </ul>
        </div>
    </div>

{% endblock %}
