{% extends 'bootstrap_3_layout.html.twig' %}

{% block _scope_permissions_subjectTypes_entry_permissions_entry_label %}
    {{ form_label(form, data.label) }}
    <hr/>
{% endblock %}

{% block _scope_permissions_subjectTypes_entry_row %}
    <div class="form-group{% if (not compound or force_error|default(false)) and not valid %} has-error{% endif %}">
        <div class="panel">
            <div class="panel-heading">
                <a class="accordion-toggle collapsed" data-toggle="collapse" data-parent="#scope_permissions_subjectTypes" href="#{{ id }}">
                    {{ data.subjectClass }}
                </a>
            </div> <!-- / .panel-heading -->
            <div id="{{ id }}" class="panel-collapse collapse">
                <div class="panel-body">
                    {{- form_label(form) -}}
                    {{- form_widget(form) -}}
                    {{- form_errors(form) -}}
                </div> <!-- / .panel-body -->
            </div> <!-- / .collapse -->
        </div> <!-- / .panel -->

    </div>
{% endblock %}

{% block _scope_permissions_subjectTypes_entry_label %}
{% endblock %}

{% block _scope_permissions_subjectTypes_entry_permissions_label %}
{% endblock %}

{% block _scope_permissions_subjectTypes_entry_permissions_entry_row %}
    <div class="col col-xs-12 col-md-4">
        {{ form_label(form) }}
        {{ form_errors(form) }}
        {{ form_widget(form) }}
    </div>
{% endblock %}

{% block _scope_permissions_subjectTypes_entry_permissions_entry_roles_label %}
{% endblock %}

{% block _scope_permissions_subjectTypes_entry_permissions %}
