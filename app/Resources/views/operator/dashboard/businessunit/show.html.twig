{% extends ':operator/dashboard:layout.html.twig' %}
{% block page_title %}
    واحد شغلی
{% endblock %}
{% block breadcrumbs %}
    <li><a href="{{ path('app_operator_dashboard_businessunit_index') }}">لیت واحد شغلی</a></li>
    <li class="active">نمایش</li>
{% endblock %}
{% block main %}
    <div class="panel">
        <div class="panel-heading">
            <span class="panel-title">واحد شغلی</span>
        </div>
        <div class="panel-body">
            <table class="table table-striped">
                <thead>
                <tr>
                    <th>Name</th>
                    <th>صنف</th>
                    <th>نوع قرار داد</th>
                </tr>
                </thead>
                <tbody>
                <tr>
                    <td>{{ businessUnit.name }}</td>
                    <td>{{ businessUnit.businessType.name }}</td>
                    <td>
                        {% if businessUnit.contractType == 1 %}
                            <span>ماهیانه</span>
                        {% else %}
                            <span>به ازای هر سفارش</span>
                        {% endif %}
                    </td>
                </tr>
                </tbody>
            </table>
            <div>
                <a style="margin-right: 10px;margin-bottom: 10px" class="btn btn-sm btn-labeled btn-primary" href="{{ path('app_operator_dashboard_businessunit_index') }}">لیست کل واحد های شغلی</a>
            </div>
        </div>
    </div>
{% endblock %}
