{% extends ':operator/dashboard:base.html.twig' %}
{% block body %}
    <div id="main-navbar" class="navbar navbar-inverse" role="navigation">
        <!-- Main menu toggle -->
        <button type="button" id="main-menu-toggle"><i class="navbar-icon fa fa-bars icon"></i><span class="hide-menu-text">HIDE MENU</span></button>
        <div class="navbar-inner">
            <!-- Main navbar header -->
            <div class="navbar-header">
                <!-- Logo -->
                <a href="{{ path('app_operator_dashboard_shipment_list') }}" class="navbar-brand">
                    <div><img alt="Pixel Admin" src="{{ asset('bundles/app/pixeladmin/assets/images/pixel-admin/main-navbar-logo.png') }}"></div>
                    Roapp
                </a>
                <!-- Main navbar toggle -->
                <button type="button" class="navbar-toggle collapsed" data-toggle="collapse" data-target="#main-navbar-collapse"><i class="navbar-icon fa fa-bars"></i></button>
            </div> <!-- / .navbar-header -->
            <div id="main-navbar-collapse" class="collapse navbar-collapse main-navbar-collapse">
                <div>
                    <div class="right clearfix">
                        <ul class="nav navbar-nav pull-right right-navbar-nav">
                            <li>
                                <form class="navbar-form pull-left">
                                    <input type="text" class="form-control" placeholder="Search">
                                </form>
                            </li>
                            <li class="dropdown">
                                <a href="#" class="dropdown-toggle user-menu" data-toggle="dropdown">
                                    <img src="{{ asset('bundles/app/pixeladmin/assets/images/pixel-admin/profileAvatar.png') }}">
                                    <span>{{ app.user.fullName }}</span>
                                </a>
                                <ul class="dropdown-menu">
                                    <li class="divider"></li>
                                    <li><a href="{{ path('app_operator_dashboard_security_logout') }}"><i class="dropdown-icon fa fa-power-off"></i>&nbsp;&nbsp;Log Out</a></li>
                                </ul>
                            </li>
                        </ul> <!-- / .navbar-nav -->
                    </div> <!-- / .right -->
                </div>
            </div> <!-- / #main-navbar-collapse -->
        </div> <!-- / .navbar-inner -->
    </div> <!-- / #main-navbar -->
    <!-- /2. $END_MAIN_NAVIGATION -->
    <div id="main-menu" role="navigation">
        <div id="main-menu-inner">
            <div class="menu-content top" id="menu-content-demo">
                <div>
                    <div class="text-bg"><span class="text-slim"></span> <span class="text-semibold">{{ app.user.fullName }}</span></div>

                    <img src="{{ asset('bundles/app/pixeladmin/assets/images/pixel-admin/profileAvatar.png') }}" alt="" class="">
                    <div class="btn-group">
                        {#<a href="#" class="btn btn-xs btn-primary btn-outline dark"><i class="fa fa-envelope"></i></a>#}
                        <a href="{{ path('app_operator_dashboard_operator_index') }}" class="btn btn-xs btn-primary btn-outline dark"><i class="fa fa-user"></i></a>
                        <a href="{{ path('app_operator_dashboard_operator_edit' , {'id' : app.user.id}) }}" class="btn btn-xs btn-primary btn-outline dark"><i class="fa fa-cog"></i></a>
                        <a href="{{ path('app_operator_dashboard_security_logout') }}" class="btn btn-xs btn-danger btn-outline dark"><i class="fa fa-power-off"></i></a>
                    </div>
                    {#<a href="#" class="close">&times;</a>#}
                </div>
            </div>
            <ul class="navigation">
                <li id="item1">
                    <a href="{{ path('app_operator_dashboard_driver_list') }}"><i class="menu-icon fa fa-dashboard"></i><span class="mm-text">فهرست مرسولات آماده برای انتصاب</span></a>
                </li>
                <li id="item2">
                    <a href="{{ path('app_operator_dashboard_shipment_index') }}"><i class="menu-icon fa fa fa-list-ol"></i><span class="mm-text">فهرست مرسوله ها</span></a>
                </li>
                <li id="item3">
                    <a href="{{ path('app_operator_dashboard_customer_index') }}"><i class="menu-icon  fa fa-users"></i><span class="mm-text">فهرست مسئولین واحد های تجاری</span></a>
                </li>
                <li id="item4">
                    <a  href="{{ path('app_operator_dashboard_driver_index') }}"><i class="menu-icon fa fa-dashboard"></i><span class="mm-text">فهرست راننده ها</span></a>
                </li>
                <li id="item5">
                    <a  href="{{ path('app_operator_dashboard_operator_index') }}"><i class="menu-icon fa fa-dashboard"></i><span class="mm-text">فهرست اپراتور ها</span></a>
                </li>
                <li id="item6">
                    <a  href="{{ path('app_operator_dashboard_businessunit_index') }}"><i class="menu-icon fa fa-dashboard"></i><span class="mm-text">فهرست واحد های شغلی</span></a>
                </li>
                <li id="item7">
                    <a href="{{ path('app_operator_dashboard_payment_index') }}"><i class="menu-icon fa fa-money"></i><span class="mm-text">فهرست پرداخت ها</span></a>
                </li>
            </ul> <!-- / .navigation -->
        </div> <!-- / #main-menu-inner -->
    </div> <!-- / #main-menu -->
    {#{{ knp_menu_render('main_menu', {"template": "menu.html.twig", "currentClass": "active"}) }}#}
    <div id="content-wrapper">
        <ul id="page-breadcrumb-demo" class="breadcrumb breadcrumb-page breadcrumb-dark" style="background: rgb(71, 142, 158); display: block;">
            <li><a href="{{ path('app_operator_dashboard_default_index') }}">خانه</a></li>
            {% block breadcrumbs %} {% endblock %}
        </ul>

        <!-- page title -->
        {% set _page_title = block('page_title') %}
        {% if _page_title is not empty %}
            <div class="page-header">
                <h1 class="ui header" style="display: inline">
                    {{ _page_title|raw }}
                </h1>
                {% set _header_link = block('header_link') %}
                {% if _header_link is not empty %}
                    {{ _header_link|raw }}
                {% endif %}
            </div>
        {% endif %}
        {% for flash_message in app.session.flashBag.get('edited_success') %}
            <div class="alert alert-info">
                {{ flash_message }}
            </div>
        {% endfor %}
        {% for flash_message in app.session.flashBag.get('registered_success') %}
            <div class="alert alert-success">
                {{ flash_message }}
            </div>
        {% endfor %}
        {% for flash_message in app.session.flashBag.get('deleted_success') %}
            <div class="alert alert-danger">
                {{ flash_message }}
            </div>
        {% endfor %}
        {% block main %}{% endblock %}
    </div> <!-- / #content-wrapper -->
    <div id="main-menu-bg"></div>
{% endblock %}