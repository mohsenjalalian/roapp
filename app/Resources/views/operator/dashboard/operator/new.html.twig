{% extends ':operator/dashboard:layout.html.twig' %}
{% block page_title %}
    ایجاد اپراتور
{% endblock %}
{% block breadcrumbs %}
    <li><a href="{{ path('app_operator_dashboard_operator_index') }}">اپراتور ها</a></li>
    <li class="active">ایجاد اپراتور</li>
{% endblock %}
{% block main %}
    {{ form_start(form) }}
    {{ form_errors(form) }}
    <div class="panel-heading">
        <span class="panel-title">ایجاد راننده</span>
    </div>
    <div class="panel-body">
        {% form_theme form 'bootstrap_3_layout.html.twig' %}
        <div class="form-group">
            {{ form_label(form.email, null, {"label_attr":{"class": "col-sm-2 control-label"}}) }}
            <div class="col-sm-10">
                {{ form_widget(form.email, {"attr": {"placeholder": form.email.vars.label}}) }}
            </div>
        </div>
        <div class="form-group">
            {{ form_label(form.fullName, null, {"label_attr":{"class": "col-sm-2 control-label"}}) }}
            <div class="col-sm-10">
                {{ form_widget(form.fullName, {"attr": {"placeholder": form.fullName.vars.label}}) }}
            </div>
        </div>
        <div class="form-group">
            {{ form_label(form.phone, null, {"label_attr":{"class": "col-sm-2 control-label"}}) }}
            <div class="col-sm-10">
                {{ form_widget(form.phone, {"attr": {"placeholder": form.phone.vars.label}}) }}
            </div>
        </div>
        <div class="form-group">
            {{ form_label(form.password.first, null, {"label_attr":{"class": "col-sm-2 control-label"}}) }}
            <div class="col-sm-10">
                {{ form_widget(form.password.first, {"attr": {"placeholder": form.password.first.vars.label}}) }}
            </div>
        </div> <!-- / .form-group -->
        <div class="form-group">
            {{ form_label(form.password.second, null, {"label_attr":{"class": "col-sm-2 control-label"}}) }}
            <div class="col-sm-10">
                {{ form_widget(form.password.second, {"attr": {"placeholder": form.password.second.vars.label}}) }}
            </div>
        </div>
        <div class="form-group">
            <div class="col-sm-offset-2 col-sm-10">
                {{ form_widget(form.isActive, {"attr": {"placeholder": form.isActive.vars.label}}) }}
            </div>
        </div>
        <div class="form-group" style="margin-bottom: 0;">
            <div class="col-sm-offset-2 col-sm-10">
                <input class="btn btn-flat btn-sm btn-labeled btn-success" type="submit" value="ایجاد" />
            </div>
        </div>
    </div>
    {{ form_end(form) }}
{% endblock %}
