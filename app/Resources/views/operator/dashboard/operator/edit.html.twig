{% extends ':operator/dashboard:layout.html.twig' %}
{% block title %}
    ویرایش اپراتور
{% endblock %}
{% block page_title %}
    ویرایش اپراتور
{% endblock %}
{% block breadcrumbs %}
    <li><a href="{{ path('app_operator_dashboard_operator_index') }}">اپراتور ها</a></li>
    <li class="active">ویرایش اپراتور</li>
{% endblock %}
{% block main %}
    {{ form_start(edit_form) }}
    {{ form_errors(edit_form) }}
    <div class="panel-heading">
        <span class="panel-title">ویرایش اپراتور</span>
    </div>
    <div class="panel-body">
        {% form_theme edit_form 'bootstrap_3_layout.html.twig' %}
        <div class="form">
            <div class="form-group">
                {{ form_label(edit_form.email, null, {"label_attr":{"class": "col-sm-2 control-label"}}) }}
                <div class="col-sm-10">
                    {{ form_widget(edit_form.email, {"attr": {"placeholder": edit_form.email.vars.label}}) }}
                </div>
            </div>
            <div class="form-group">
                {{ form_label(edit_form.fullName, null, {"label_attr":{"class": "col-sm-2 control-label"}}) }}
                <div class="col-sm-10">
                    {{ form_widget(edit_form.fullName, {"attr": {"placeholder": edit_form.fullName.vars.label}}) }}
                </div>
            </div>
            <div class="form-group">
                {{ form_label(edit_form.phone, null, {"label_attr":{"class": "col-sm-2 control-label"}}) }}
                <div class="col-sm-10">
                    {{ form_widget(edit_form.phone, {"attr": {"placeholder": edit_form.phone.vars.label}}) }}
                </div>
            </div>
            <div class="form-group">
                {{ form_label(edit_form.password.first, null, {"label_attr":{"class": "col-sm-2 control-label"}}) }}
                <div class="col-sm-10">
                    {{ form_widget(edit_form.password.first, {"attr": {"placeholder": edit_form.password.first.vars.label}}) }}
                </div>
            </div> <!-- / .form-group -->
            <div class="form-group">
                {{ form_label(edit_form.password.second, null, {"label_attr":{"class": "col-sm-2 control-label"}}) }}
                <div class="col-sm-10">
                    {{ form_widget(edit_form.password.second, {"attr": {"placeholder": edit_form.password.second.vars.label}}) }}
                </div>
            </div>
            <div class="form-group">
                <div class="col-sm-offset-2 col-sm-10">
                    {{ form_widget(edit_form.isActive, {"attr": {"placeholder": edit_form.isActive.vars.label}}) }}
                </div>
            </div>
            <div class="form-group" style="margin-bottom: 10px;">
                <div class="col-sm-offset-2 col-sm-10">
                    <input id="driver_edit_button" class="btn btn-flat btn-sm btn-labeled btn-info" type="submit" value="ویرایش" />
                </div>
            </div>
            {{ form_end(edit_form) }}
            <div class="form-group" style="margin-bottom: 10px;">
                <div class="col-sm-offset-2 col-sm-10">
                    {{ form_start(delete_form) }}
                    <input class="btn btn-flat btn-sm btn-labeled btn-danger" type="submit" value="حذف">
                    {{ form_end(delete_form) }}
                </div>
            </div>
        </div>
    </div>
{% endblock %}
